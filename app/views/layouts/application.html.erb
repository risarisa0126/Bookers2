<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookers2</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head>


<body>

        <nav class="navbar navbar-static-top navbar-inverse">
         <div class="container">
          <div class="navbar-header">
           <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">Bookers2</a>
          </div>



          <div class="collapse navbar-collapse navbar-right" id="navbarEexample">
            <ul class="nav navbar-nav">
              <% if user_signed_in? %>
                <li class="icon">
                  <%= link_to user_path(current_user.id) do %>
                  <span class="glyphicon glyphicon-home" aria-hidden="true">Home</span>
                  <% end %>
                </li>
                <li class="icon">
                  <%= link_to users_path do %>
                  <span class="glyphicon glyphicon-user" aria-hidden="true">Users</span>
                  <% end %>
                </li>
                <li class="icon">
                  <%= link_to books_path do %>
                  <span class="glyphicon glyphicon-book" aria-hidden="true">Books</span>
                  <% end %>
                </li>
                <li class="icon">
                  <%= link_to destroy_user_session_path, method: :delete  do %>
                  <span class="glyphicon glyphicon-log-out" aria-hidden="true">logout</span>
                  <% end %>
                </li>
              <% else %>
                <li class="icon">
                  <%= link_to root_path do %>
                  <span class="glyphicon glyphicon-home" aria-hidden="true">Home</span>
                  <% end %>
                </li>
                <li class="icon">
                  <%= link_to home_about_path do %>
                  <span class="glyphicon glyphicon-link" aria-hidden="true">About</span>
                  <% end %>
                </li>
                <li class="icon">
                  <%= link_to new_user_registration_path do %>
                  <span class="glyphicon glyphicon-edit" aria-hidden="true">sign up</span>
                  <% end %>
                </li>
                <li class="icon">
                  <%= link_to new_user_session_path do %>
                  <span class="glyphicon glyphicon-log-in" aria-hidden="true">log in</span>
                  <% end %>
                </li>
               </ul>
              <% end %>
          </div>
      </div>
    </nav>

<%= yield %>

        <footer>
          <div class="container">
            <div class="row">
              <div class="top-message col-xs-3 col-xs-offset-9">CopyRight Infratop.Inc
              </div>
            </div>
          </div>
        </footer>

  </body>
</html>
