<div class="error">
  <% if book.errors.any? %>
   <%= book.errors.count %>件のerrorが発生しました
     <ul>
     <% book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
  　  <% end %>
     </ul>
  <% end %>
</div>

<h2>User info</h2>
  <% if flash[:notice] %>
 　<div class="flash">
  <%= flash[:notice] %>
   </div>
  <% end %>

 <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table table-striped">
   <tr>
    <td>name</td>
    <td><%= user.name %></td>
   </tr>
   <tr>
    <td>introduction</td>
    <td><%= user.introduction %></td>
  </table>
  <%= link_to"edit", edit_user_path(user.id),class: "btn btn-default"%>

<h2>New book</h2>
  <%= form_for(book) do |f| %>

  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
   <%= f.submit 'Create book',class: "btn btn-default" %>
   <% end %>

