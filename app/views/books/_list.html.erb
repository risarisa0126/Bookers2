<h2>New book</h2>
  <%= form_for(book) do |f| %>
   <div class="error">
     <% if book.errors.any? %>
      <ul>
        <% book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
     <% end %>
    </div>


  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
   <%= f.submit 'Create book' %>
   <% end %>

