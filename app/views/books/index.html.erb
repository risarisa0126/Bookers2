<body>

  <h1>Books</h1>
  <table border="0" cellpadding="8" cellspacing="10">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th> </th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to book.title, book_path(book.id) %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </table>
  <br>
  <br>
  <br>

<%= render 'books/list', book: @book %>

</body>