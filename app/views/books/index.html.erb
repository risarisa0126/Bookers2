<body>

  <div class="container">
  <div class="row">
    <div class="col-lg-4" style="background-color: #d3d3d3;">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
    <div class="col-lg-8">
      <h1>Books</h1>
      <table class="table table-striped">
        <tr>
          <th> </th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td>image</td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

</body>