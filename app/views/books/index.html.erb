  <div class="container">
   <div class="row">
    <div class="col-xs-3">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
    <div class="col-xs-9">
      <h1>Books</h1>
      <table class="table table-striped">
        <tr>
          <th> </th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', size: '40x40', fallback: "no_image.jpg" %></td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
     </div>
    </div>
   </div>