	<div class="container">
	  <div class="row">
	    <div class="col-xs-3">
	      <%= flash[:success]%>
	      <%= render 'books/list', book: @book, user: @user %>
	    </div>
	    <div class="col-xs-9">
	      <h1>Book detail</h1>
			<table class="table table-striped">
			  <tr>
			  	<td>
			  		<%= link_to user_path(@user.id) do %>
				  		<%= attachment_image_tag @book.user, :profile_image, :fill, :fill, 40, 40, format: 'jpeg', size: '40x40', fallback: "no_image.jpg" %><br>
				  		<%= @user.name %>
			  		<% end %>
			  	</td>
			    <td><%= link_to @books.title %></td>
			    <td><%= @books.body %></td>
			    <% if current_user.id == @user.id %>
			    <td><%= link_to"edit", edit_book_path(@books.id),class: "btn btn-success"%></td>
			    <td><%= link_to"destroy", book_path(@books),class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?", commit:"Ok", cancel:"キャンセル"} %></td>
			    <% end %>
			  </tr>
			</table>
		</div>
	  </div>
	</div>

