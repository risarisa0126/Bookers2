<%= flash[:success]%>

<div class="container">
  <div class="row">
    <div class="col-lg-4" style="background-color: #d3d3d3;">
      <%= render 'books/list', book: @book, user: @user %>
    </div>
    <div class="col-lg-8">
      <h1>Book detail</h1>
		<table class="table table-striped">
		  <tr>
		    <td><%= @books.title %></td>
		    <td><%= @books.body %></td>
		    <% if current_user.id == @user.id %>
		    <td><%= link_to"edit", edit_book_path(@books.id),class: "btn btn-default"%></td>
		    <td><%= link_to"destroy", book_path(@books),class: "btn btn-default", method: :delete, data: { confirm: "Are you sure?", commit:"Ok", cancel:"キャンセル"} %></td>
		    <% end %>
		  </tr>
		</table>
	</div>
  </div>
</div>

