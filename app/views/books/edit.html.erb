<div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Editing Book</h1>
          <%= form_for(@book) do |f| %>
           <div class="error">
          <% if @book.errors.any? %>
           <%= @book.errors.count %>件のerrorが発生しました
             <ul>
             <% @book.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          　  <% end %>
             </ul>
          <% end %>
        </div>

          <h4>Title</h4>
           <%= f.text_field :title %>
          <h4>Opinion</h4>
           <%= f.text_area :body %>
           <%= f.submit 'Create book',class: "btn btn-primary btn-lg btn-block"%>
           <% end %>

        <%= link_to"show", book_path(@book.id)%> |
        <%= link_to"back", books_path %>
      </div>
    </div>
</div>
